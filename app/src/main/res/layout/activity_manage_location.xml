<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <!-- LinearLayout for Back Button and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- FloatingActionButton for Back Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnBack"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginBottom="14dp"
            android:padding="9dp"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:contentDescription="@string/todo"
            android:focusable="true"
            android:layout_gravity="left" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="@string/change_location"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="-10dp"
            android:textColor="@color/purple"
            android:fontFamily="@font/nunitoblack"
            android:gravity="center"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please enter the location details below"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"/>

    <!-- EditText for Location Name -->
    <EditText
        android:id="@+id/editTextLocationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Insert Location Name"
        android:inputType="text"
        android:layout_marginBottom="5dp"/>

    <!-- EditText for Location Address -->
    <EditText
        android:id="@+id/editTextLocationAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Insert Address Coordinates"
        android:inputType="text"
        android:layout_marginBottom="5dp"/>

    <!-- Button for Save Location -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnPreviewLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Preview Location"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:padding="2dp"/>

        <Button
            android:id="@+id/btnSaveLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save Location"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:padding="2dp"/>

    </LinearLayout>


</LinearLayout>
